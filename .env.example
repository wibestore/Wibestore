# WibeStore Frontend - Environment Variables
# Copy this file to .env and fill in your values

# ==================== API Configuration ====================
# API base URL (relative path for Vite proxy in dev; full URL for production)
# Production (Railway): https://exemplary-fascination-production-9514.up.railway.app/api/v1
VITE_API_BASE_URL=/api/v1

# WebSocket base URL (for production use wss://...; in dev Vite proxy handles /ws)
# Production: wss://exemplary-fascination-production-9514.up.railway.app
VITE_WS_BASE_URL=ws://localhost:8000

# ==================== Telegram Bot (Kirish / Ro'yxatdan o'tish) ====================
# Bot username ( @BotFather dan, masalan: wibestorebot )
VITE_TELEGRAM_BOT_USERNAME=wibestorebot

# ==================== Google OAuth ====================
# Get from https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=

# ==================== Admin Credentials ====================
# IMPORTANT: Change these default values in production!
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=

# ==================== Appwrite Configuration (optional) ====================
# Only needed if using Appwrite as backend
VITE_APPWRITE_ENDPOINT=
VITE_APPWRITE_PROJECT_ID=

# ==================== EmailJS Configuration (optional) ====================
# Get from https://dashboard.emailjs.com/
VITE_EMAILJS_SERVICE_ID=
VITE_EMAILJS_TEMPLATE_ID=
VITE_EMAILJS_PUBLIC_KEY=

# ==================== Sentry (optional) ====================
# Error tracking - get from https://sentry.io/
VITE_SENTRY_DSN=

# ==================== Environment ====================
# Options: development, production
VITE_APP_ENV=development